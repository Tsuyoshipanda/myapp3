<h2><%= @user.name %></h2>
<p><%= @user.email %></p>

<% if @user.id == @current_user.id %>
  <%= link_to("編集" , "/users/#{@user.id}/edit") %>
<% end %>

<% @user.posts.each do |post| %>
  <%= link_to(post.user.name, "/users/#{post.user.id}")%>
  <%# <%= link_to(post.content , "/posts/#{post.id}") %>
<% end %>

<% @bookmark_posts.each do |post| %>
  <hr>
  <span>ブックマーク内容: </span>
  <p><%= post.task1 %></p>
  <p><%= post.task2 %></p>
  <p><%= post.task3 %></p>
  <p><%= post.task4 %></p>
  <p><%= post.task5 %></p>

<% end %>
