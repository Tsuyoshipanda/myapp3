<% @user.errors.full_messages.each do |message| %>
  <%= message %>
<% end %>

<%= form_tag("/users/#{@user.id}/update") do %>
  <p>ユーザー名</p>
  <input type="text" name="name" value="<%= @user.name %>">
  <p>メールアドレス</p>
  <input type="text" name="email" value="<%= @user.email %>">
  <input type="submit" value="保存">
<% end %>
