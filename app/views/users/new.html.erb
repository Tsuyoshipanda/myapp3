<h1>新規登録</h1>



<%= form_for(@user, url:users_create_path) do |f| %>
  <p>ユーザー名</p>
  <%= f.text_field :name, value:@user.name %>
  <p>メールアドレス</p>
  <%= f.text_field :email, value:@user.email %>
  <p>パスワード</p>
  <%= f.password_field :password, value:@user.password %>
  <p>プロフィール画像</p>
  <%= f.file_field :avatar %>
  <%= f.submit "新規登録"%>
<% end %>
