<h1>投稿詳細ページです</h1>
<%= link_to(@user.name , "/users/#{@user.id}") %>
<%= @post.task %>
<%= @post.created_at %>
<%= @post.task_type %>
<% if @post.images.attached? %>
  <% @post.images.each do |image| %>
    <%= image_tag image %> <br>
  <% end %>
<% end %>
<% if @post.user_id == @current_user.id %>
  <%= link_to("編集" , "/posts/#{@post.id}/edit", id: @post.id) %>
  <%= link_to("削除" , "/posts/#{@post.id}/destroy" , {method: "post"}) %>
<% end %>
