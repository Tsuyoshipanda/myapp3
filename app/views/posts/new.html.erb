<h1>投稿用ページ</h1>

<%= form_for @post,url:posts_create_path do |f| %>
  <p><%= f.label :task, "task" %>
     <%= f.text_field :task %>
     <%= f.select :task_type, [["簡単", "簡単"],  ["難しい", "難しい"], ["短時間", "短時間"],["長時間", "長時間"], ["a", "a"] ], :prompt => "選択してください"%>
     <%= f.label :deadline, "締め切り" %>
     <%= raw sprintf(
                 f.date_select(
                     :deadline,
                     use_month_numbers: true,
                     start_year:        2020,
                     default:           Date.today,
                     date_separator:    '%s'),
                 '年 ', '月 ') + '日'
      %>
  </p>
  <%= f.submit "投稿" %>
<% end %>
