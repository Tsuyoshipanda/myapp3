<h1>投稿用ページ</h1>


<%= form_with model:@post, local:true  do |f| %>
  <p>
    <%= f.label :task, "task" %>
    <%= f.text_field :task %>
    <%= f.select :task_type, [["簡単", "簡単"],  ["難しい", "難しい"], ["短時間", "短時間"],["長時間", "長時間"], ["a", "a"] ], :prompt => "選択してください"%>
    <%= f.label :deadline, "締め切り" %>
    <%= raw sprintf(
                 f.date_select(
                     :deadline,
                     use_month_numbers: true,
                     start_year:        2020,
                     default:           Date.today,
                     date_separator:    '%s'),
                 '年 ', '月 ') + '日'
     %>

  </p>

  <div class='sell-container__content'>
    <div class='sell-container__content__upload'>
      <div class='sell-container__content__upload__items'>
        <div class='sell-container__content__upload__items__box'>
          <ul id='output-box'>
            <div id='image-input' tabindex="0">
                <%= f.label :images, for: "item_images0", class: 'sell-container__content__upload__items__box__label', data: {label_id: 0 } do %>
                <%= f.file_field :images, multiple: true, class: "sell-container__content__upload__items__box__input", id: "item_images0"%>
                <% end %>
            </div>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <%= f.submit "投稿" %>
<% end %>
